{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["esnext"],
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "strict": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "newLine": "lf",
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "outDir": "build"
  },
  "include": ["./**.js", "./**.ts", "./**.tsx", "**/*.js", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "build", "coverage"]
}
