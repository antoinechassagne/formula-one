{
  "name": "formula-one-api",
  "engines": {
    "node": "16.15.0"
  },
  "scripts": {
    "dev": "tsc-watch --onSuccess 'nodemon --exec npm run start:local'",
    "build": "tsc --project ./tsconfig.build.json",
    "start": "node build/index.js",
    "start:local": "node -r dotenv/config build/index.js dotenv_config_path=.env",
    "type-check": "tsc --noEmit",
    "lint": "npx eslint -c .eslintrc.js ./",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:drop": "node -r dotenv/config database/scripts/drop.js",
    "db:create": "node -r dotenv/config database/scripts/create.js",
    "db:populate": "node -r dotenv/config database/scripts/populate/index.js"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.6.0",
    "@graphql-tools/merge": "^8.3.0",
    "@graphql-tools/schema": "^8.5.0",
    "csvtojson": "^2.0.10",
    "dotenv": "^10.0.0",
    "fastify": "^4.2.0",
    "knex": "^0.95.14",
    "mercurius": "^10.1.0",
    "nodemon": "^2.0.15",
    "pg": "^8.7.3"
  },
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.2",
    "pino-pretty": "^8.1.0",
    "prettier": "^2.7.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.7.4"
  }
}
